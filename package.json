{
  "name": "@mojaloop/central-services-logger",
  "version": "10.6.1",
  "description": "Mojaloop common logging library",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-logger.git"
  },
  "author": "ModusBox",
  "contributors": [
    "Lazola Lucas <lazola.lucas@modusbox.com>",
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-logger/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-logger#readme",
  "pre-commit": [
    "lint",
    "dep:check",
    "test"
  ],
  "scripts": {
    "test": "npm run test:unit",
    "pretest": "standard",
    "standard": "standard",
    "standard:fix": "standard --fix",
    "lint": "npm run standard",
    "lint:fix": "npm run standard:fix",
    "test:unit": "tapes 'test/unit/**/**.test.js' | tap-spec",
    "test:xunit": "tapes 'test/unit/**/**.test.js' | tap-xunit",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary tapes -- 'test/unit/**/**.test.js'",
    "test:coverage-check": "npm run test:coverage && nyc check-coverage",
    "audit:resolve": "resolve-audit --production",
    "audit:check": "check-audit --production",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'"
  },
  "dependencies": {
    "@types/node": "^17.0.27",
    "parse-strings-in-object": "2.0.0",
    "rc": "1.2.8",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "license-checker": "25.0.1",
    "npm-audit-resolver": "3.0.0-7",
    "npm-check-updates": "12.5.9",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "proxyquire": "2.1.3",
    "sinon": "13.0.2",
    "standard": "17.0.0",
    "standard-version": "^9.3.2",
    "tap-spec": "^5.0.0",
    "tape": "5.5.3",
    "tapes": "4.1.0",
    "tsc": "^2.0.4"
  },
  "standard": {
    "ignore": []
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
